{
    "init_variables" :{
        "type": "dict",
        "schema": {
            "hostname": {
                "meta" : {"description": "Hostname for Linux OS"},
                "required": true,
                "type": "string",
                "default": "lin0001"
                },
            "ip_address": {
                "meta" : {"description": "IP address in CIDR format to be assigned to the Linux VM"},
                "required": true,
                "type": "string",
                "default": "10.10.10.0/21"
                },
            "gateway": {
                "meta" : {"description": "Gateway IP address for the Linux VM"},
                "required": true,
                "type": "string",
                "default": "10.10.10.1"
                },
            "dns_domain": {
                "meta" : {"description": "DNS domain name"},
                "required": true,
                "type": "string",
                "default": "mydomain.local"
                },
            "primary_dns": {
                "meta" : {"description": "IP address of the primary DNS server"},
                "required": true,
                "type": "string",
                "default": "8.8.8.8"
                },
            "secondary_dns": {
                "meta" : {"description": "IP address of the secondary DNS server"},
                "required": true,
                "type": "string",
                "default": "9.9.9.9"
                },
            "username": {
                "meta" : {"description": "Default username for the Linux sudo account"},
                "required": true,
                "type": "string",
                "default": "linux"
                },
            "public_key": {
                "meta" : {"description": "Path to the public key file to use for the Linux sudo account"},
                "required": true,
                "type": "string",
                "default": "~/.ssh/id_rsa.pub"
                },
            "password": {
                "meta" : {"description": "Linux sudo account default password"},
                "required": true,
                "type": "string"
                }
        }
    }
}