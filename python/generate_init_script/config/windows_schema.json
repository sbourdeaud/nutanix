{
    "init_variables" :{
        "type": "dict",
        "schema": {
            "computer_name": {
                "meta" : {"description": "Hostname for Windows OS (no longer than 15 characters)"},
                "required": true,
                "type": "string",
                "default": "win0001"
                },
            "registered_organization": {
                "meta" : {"description": "Registered Organization for Windows EULA"},
                "required": true,
                "type": "string",
                "default": "Acme Inc."
                },
            "registered_owner": {
                "meta" : {"description": "Registered Owner for Windows EULA"},
                "required": true,
                "type": "string",
                "default": "IT Department"
                },
            "time_zone": {
                "meta" : {"description": "Timezone for Windows OS (https://learn.microsoft.com/en-us/windows-hardware/manufacture/desktop/default-time-zones?view=windows-11)"},
                "required": true,
                "type": "string",
                "default": "UTC"
                },
            "product_key": {
                "meta" : {"description": "Windows Product key"},
                "required": true,
                "type": "string",
                "default": "XXXXX-XXXXX-XXXXX-XXXXX-XXXXX"
                },
            "ip_address": {
                "meta" : {"description": "IP address in CIDR format to be assigned to the Windows VM"},
                "required": true,
                "type": "string",
                "default": "10.10.10.0/21"
                },
            "next_hop_address": {
                "meta" : {"description": "Gateway IP address for the Windows VM"},
                "required": true,
                "type": "string",
                "default": "10.10.10.1"
                },
            "dns_domain": {
                "meta" : {"description": "DNS domain name"},
                "required": true,
                "type": "string",
                "default": "mydomain.local"
                },
            "primary_dns": {
                "meta" : {"description": "IP address of the primary DNS server"},
                "required": true,
                "type": "string",
                "default": "8.8.8.8"
                },
            "secondary_dns": {
                "meta" : {"description": "IP address of the secondary DNS server"},
                "required": true,
                "type": "string",
                "default": "9.9.9.9"
                },
            "administrator_password": {
                "meta" : {"description": "Windows administrator default password"},
                "required": true,
                "type": "string"
                },
            "administrator_username": {
                "meta" : {"description": "Default username for the Windows administrator account"},
                "required": true,
                "type": "string",
                "default": "administrator"
                },
            "input_locale": {
                "meta" : {"description": "Locale for input devices (https://learn.microsoft.com/en-us/windows-hardware/manufacture/desktop/available-language-packs-for-windows?view=windows-11)"},
                "required": true,
                "type": "string",
                "default": "en-US"
                },
            "system_locale": {
                "meta" : {"description": "Locale for Windows OS (https://learn.microsoft.com/en-us/windows-hardware/manufacture/desktop/available-language-packs-for-windows?view=windows-11)"},
                "required": true,
                "type": "string",
                "default": "en-US"
                },
            "ui_language": {
                "meta" : {"description": "Default language locale for Windows UI (https://learn.microsoft.com/en-us/windows-hardware/manufacture/desktop/available-language-packs-for-windows?view=windows-11)"},
                "required": true,
                "type": "string",
                "default": "en-US"
                },
            "active_directory_domain": {
                "meta" : {"description": "Active Directory domain name you want to join the Windows VM to"},
                "required": true,
                "type": "string",
                "default": "mydomain.local"
                },
            "domain_join_username": {
                "meta" : {"description": "Active Directory domain username you want to use to join the Windows VM to the Active Directory domain"},
                "required": true,
                "type": "string",
                "default": "me@mydomain.local"
                },
            "domain_join_password": {
                "meta" : {"description": "Active Directory domain password you want to use to join the Windows VM to the Active Directory domain"},
                "required": true,
                "type": "string"
                },
            "machine_object_ou": {
                "meta" : {"description": "DN of the Active Directory OU where the computer object should be created"},
                "required": true,
                "type": "string",
                "default": "OU=Computers,DC=mydomain,DC=local"
                }
        }
    }
}